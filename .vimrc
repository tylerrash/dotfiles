syntax on

set cursorline
set number
set showcmd

set tabstop=4		" number of visual spaces per tab
set softtabstop=4
set shiftwidth=4
set expandtab		" use spaces instead of tabs
set ai              " auto indent
set si              " smart indent
set wrap            " wrap lines 

set ruler
set scrolloff=5     " keep at least 5 lines above/below

set hlsearch        " highlight search results
